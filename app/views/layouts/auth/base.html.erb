<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <title><%= content_for?(:title) ? yield(:title) : t('site_name') %></title>
    <meta name="description" content="<%= yield(:meta_description) %>" />
    <meta name="keywords" content="<%= yield(:meta_keywords) %>" />
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= css_load media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= js_load 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= csp_meta_tag %>
  </head>
  <body class="as-body">
    <%= render 'nav_bar' %>
    <%= render 'shared/alert' %>
    <main class="columns is-vcentered as-main">
      <%= yield %>
    </main>
    <%= render 'footer' %>
    <div id="modal"></div>
    <%= javascript_pack_tag 'footer' %>
  </body>
</html>
