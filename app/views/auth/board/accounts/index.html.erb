<table class="table is-fullwidth">
  <tbody>
  <% @accounts.each do |account| %>
    <tr>
      <td>
        <div data-controller="input">
          <%= check_box_tag '[account]primary', nil, account.primary, data: { method: :patch, remote: true, url: board_account_path(account), action: 'input#submit' }, id: nil, class: 'switch is-rounded', disabled: account.primary %>
          <label><%= t('.primary') %></label>
        </div>
      </td>
      <td>
        <span><%= account.identity %></span>
        <% if account.confirmed %>
          <i class="fas fa-check-circle has-text-success"></i>
        <% else %>
          <i class="fas fa-question-circle has-text-warning"></i>
        <% end %>
      </td>
      <td>
        <% unless account.confirmed %>
          <%= form_with url: confirm_board_account_path(account), wrap: { all: nil, input: 'field is-narrow', submit: nil }, origin: { offset: nil }, class: 'field is-horizontal' do |f| %>
            <div class="field-body">
              <%= f.text_field :token, class: 'input', placeholder: '验证码' %>
              <div class="field is-narrow">
                <%= f.submit %>
              </div>
            </div>
          <% end %>
        <% end %>
      </td>
      <td>
        <% unless account.confirmed %>
          <button data-controller="login" data-url="<%= token_board_account_url(account.id) %>" data-time="60" data-action="login#countDown" class="button is-link">发送验证码</button>
        <% end %>
        <% unless account.primary %>
          <%= link_to board_account_path(account), method: :delete, aria: { label: t('.destroy'), confirm: '删除后此账号无法用于登陆' }, remote: true, class: 'button' do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td>
      <%= form_with url: board_accounts_path, method: :post, id: 'add_account' %>
    </td>
    <td>
      <div class="field has-addons">
        <div class="control">
          <%= text_field_tag 'account[identity]', nil, placeholder: Account.human_attribute_name(:identity), form: 'add_account', class: 'input' %>
        </div>
        <div class="control">
          <%= submit_tag '添加', form: 'add_account', class: 'button is-primary' %>
        </div>
      </div>
    </td><td>
    </td>
    <td colspan="3"></td>
  </tr>
  </tbody>
</table>
