<h4 class="panel-heading has-text-centered"><%= t('.title') %></h4>
<%= form_with scope: nil, url: login_path, local: true, origin: { label: false, offset: false }, wrap: { input: 'field control', all: nil, submit: 'panel-block' } do |f| %>
  <div class="panel-block is-wrapped">
    <%= f.text_field :identity, value: params[:identity], placeholder: Auth::Account.human_attribute_name(:identity) %>
    <%= f.password_field :password, placeholder: User.human_attribute_name(:password), autocomplete: false %>
  </div>
  <div class="has-text-right">
    <%= link_to t('.token'), sign_token_path(identity: params[:identity]), method: :post, id: 'mobile_confirm', class: 'has-text-grey' %>
    <span>|</span>
    <%= link_to t('.forget'), password_forget_path, class: 'has-text-grey' %>
  </div>
  <%= f.submit class: 'button is-primary is-fullwidth' %>
<% end %>
