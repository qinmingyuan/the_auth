<%= form_with theme: 'weui', scope: nil, url: login_path do |f| %>
  <div class="weui-form__control-area">
    <div class="weui-cells__group weui-cells__group_form">
      <div class="weui-cells__title">注册/登陆</div>
      <div class="weui-cells weui-cells_form">
        <%= f.hidden_field :uid, value: params[:uid], autocomplete: false %>
        <%= f.text_field :identity, value: params[:identity], placeholder: Auth::VerifyToken.human_attribute_name(:identity), autocomplete: false, data: { login_target: 'identity' } %>
        <div class="weui-cell weui-cell_active weui-cell_vcode">
          <%= f.text_field :token, placeholder: Auth::VerifyToken.human_attribute_name(:token), wrap: { all: nil } %>
          <turbo-frame class="weui-cell__ft">
            <%= button_to({ action: 'code', identity: params[:identity] }, form: { id: 'sign_token' }, class: 'weui-btn weui-btn_default weui-vcode-btn') do %>
              <span><%= t('.token') %></span>
            <% end %>
          </turbo-frame>
        </div>
      </div>
    </div>
  </div>
  <%= f.submit '提交', wrap: { all: nil } %>
<% end %>
