<div class="three wide column">
  <h2 class="ui block top attached centered header"><%= t('.title') %></h2>
  <div class="ui bottom attached segment">
    <%= form_with model: User.new, scope: '', url: password_reset_url(params[:token]), can: { label: nil, wrap_input: false, placeholder: true }, css: { wrap_all: 'field' } do |f| %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit class: 'ui fluid primary button' %>
    <% end %>
  </div>
</div>

