<div class="ui modal" id="modal">
  <i class="fas fa-times close"></i>
  <div class="ui header">
    <%= t('.edit') %>
  </div>

  <div class="content">
    <%= form_with model: @user, url: user_tags_panel_user_path(@user), method: :patch do |f| %>
      <%= render 'shared/error_messages', target: @user %>
      <%= f.collection_check_boxes :user_tag_ids, @user_tags, :id, :name %>
      <%= f.submit %>
    <% end %>
  </div>
</div>








