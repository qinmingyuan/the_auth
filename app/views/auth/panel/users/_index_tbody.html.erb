<tr>
  <td>
    <%= link_to({ action: 'show', id: user.id }) do %>
      <%= image_tag user.avatar.variant(resize_to_limit: [30, 30]), class: 'image is-24x24' if user.avatar.attached? %>
      <%= user.name %>
    <% end %>
  </td>
  <td>
    <p><%= user.locale %></p>
    <p><%= user.timezone %></p>
  </td>
  <td><time><%= user.created_at.to_s(:rfc822) %></time></td>
  <td>
    <p><time><%= user.last_login_at.to_s(:rfc822) if user.last_login_at %></time></p>
    <p><%= user.last_login_ip %></p>
  </td>
  <td>
    <div data-controller="input">
      <%= check_box_tag '[user]disabled', nil, user.disabled, data: { method: :patch, url: panel_user_path(user), action: 'input#submit' }, id: nil, class: 'switch is-rounded' %>
      <label></label>
    </div>
  </td>
  <td>
    <div class="tags">
    <% user.oauth_users.each do |oauth_user| %>
      <%= link_to oauth_user.type_i18n, { controller: 'oauth_users', user_id: user.id }, class: 'tag' %>
    <% end %>
    </div>
  </td>
  <td>
    <% user.accounts.each do |account| %>
      <p>
        <%= link_to({ controller: 'accounts', user_id: user.id }, aria: { label: t('auth.panel.accounts.index.title') }) do %>
          <i class="fas fa-portrait"></i>
        <% end %>
        <span><%= account.identity %></span>
      </p>
    <% end %>
  </td>
  <td>
    <%= link_to({ action: 'show', id: user.id }, aria: { label: t('.show') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-info"></i>
    <% end %>
    <%= link_to({ controller: 'authorized_tokens', user_id: user.id }, aria: { label: t('auth.panel.authorized_tokens.index.title') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-key"></i>
    <% end %>
    <%= link_to user_tags_panel_user_path(user), aria: { label: t('.tag') }, class: 'button is-small is-rounded is-light' do %>
      <i class="fas fa-user-tag"></i>
    <% end %>
    <%= link_to({ controller: 'role/admin/who_roles', action: 'edit', who_type: 'User', who_id: user.id }, aria: { label: t('.role') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-user-lock"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: user.id }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: user.id }, method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
