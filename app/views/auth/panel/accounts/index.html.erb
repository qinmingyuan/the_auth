<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Account.human_attribute_name(:user_id) %></th>
      <th><%= Account.human_attribute_name(:type) %></th>
      <th><%= Account.human_attribute_name(:identity) %></th>
      <th><%= Account.human_attribute_name(:confirmed) %></th>
      <th><%= Account.human_attribute_name(:primary) %></th>
      <th><%= Account.human_attribute_name(:created_at) %></th>
      <th>
        <%= link_to new_panel_account_path, remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><% t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @accounts.each do |account| %>
    <tr>
      <td><%= account.user_id %></td>
      <td><%= account.type_i18n %></td>
      <td><%= account.identity %></td>
      <td>
        <div class="ui toggle checkbox">
          <%= check_box_tag '[account]confirmed', nil, account.confirmed, data: { method: :patch, remote: true, url: panel_account_path(account), submit: true }, id: nil %>
        </div>
      </td>
      <td>
        <div class="ui toggle checkbox">
          <%= check_box_tag '[account]primary', nil, account.primary, data: { method: :patch, remote: true, url: panel_account_path(account), submit: true }, id: nil %>
        </div>
      </td>
      <td><time><%= account.created_at.to_s(:rfc822) %></time></td>
      <td>
        <%= link_to panel_account_path(account), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_panel_account_path(account), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to panel_account_path(account), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @accounts %>
