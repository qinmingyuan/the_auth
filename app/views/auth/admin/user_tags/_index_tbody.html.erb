<tr>
  <td><%= user_tag.name %></td>
  <td>
    <%= link_to user_tag.user_taggeds_count, { controller: 'user_taggeds', action: 'index', user_tag_id: user_tag.id } %>
  </td>
  <td>
    <%= link_to({ controller: 'user_taggeds', action: 'index', user_tag_id: user_tag.id }, { aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-info"></i>
    <% end %>
    <%= link_to({ action: 'edit', id: user_tag.id }, { aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: user_tag.id }, { method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' }) do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </td>
</tr>
