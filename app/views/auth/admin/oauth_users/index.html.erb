<% content_for :breadcrumb do %>
<div class="breadcrumb has-succeeds-separator">
  <ul>
    <li class="is-active"><%= t('.title') %></li>
  </ul>
</div>
<% end %>

<% unless params[:user_id] %>
  <%= render 'filter_form' %>
<% end %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= OauthUser.human_attribute_name(:type) %></th>
      <th>
        <p class="has-text-success"><%= OauthUser.human_attribute_name(:uid) %></p>
        <p class="has-text-grey"><%= OauthUser.human_attribute_name(:app_id) %></p>
      </th>
      <th><%= OauthUser.human_attribute_name(:name) %></th>
      <th><%= OauthUser.human_attribute_name(:created_at) %></th>
      <th><%= OauthUser.human_attribute_name(:user) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @oauth_users.each do |oauth_user| %>
    <tr>
      <td><%= oauth_user.type_i18n %></td>
      <td>
        <p class="has-text-success"><%= oauth_user.uid %></p>
        <p class="has-text-grey"><%= oauth_user.app_id %></p>
      </td>
      <td>
        <%= image_tag oauth_user.avatar_url, class: 'image is-24x24' if oauth_user.avatar_url.present? %>
        <%= oauth_user.name %>
      </td>
      <td><time><%= oauth_user.created_at.to_s(:rfc822) %></time></td>
      <td>
        <%= link_to oauth_user.user_id, panel_user_path(oauth_user.user_id) if oauth_user.user_id %>
      </td>
      <td>
        <%= link_to admin_oauth_user_path(oauth_user), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @oauth_users %>
